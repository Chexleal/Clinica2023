<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Traumha</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
    @await RenderSectionAsync("Links", required: false)

</head>
<body>
    <div class="container-menu container-fluid vh-100 d-flex" style="background-color:#f2f2f2;">
        <nav class="menu align-content-center justify-content-center">
            <div class="logo align-content-center justify-content-center d-flex mx-auto my-auto mt-4 ">
                    <img src="~/img/Logo.png" alt="Logo" style="width:80%" class="">
            </div>
            <hr class="mt-4">
            <b>Hola Edgar Hernandez</b>
            <hr>
            <div class="botones btn-group-vertical  mt-2">
                <a class="menu_bt" href="/Pacientes"><img class="menu_icon" src="~/img/paciente.png"> Pacientes</a>
                <a class="menu_bt" href="/Consultas"><img class="menu_icon" src="~/img/logout.png">Consultas</a>
                <a class="menu_bt" href="/Pagos"><img class="menu_icon" src="~/img/logout.png">pagar Consultas</a>
                <a class="menu_bt " href="/Citas"><img class="menu_icon" src="~/img/logout.png">Citas</a>
                <a class="menu_bt " href="/Reportes"><img class="menu_icon" src="~/img/logout.png">Reportes</a>
                <a class="menu_bt " href="/Servicios"><img class="menu_icon" src="~/img/logout.png">Servicios</a>
                <a class="menu_bt " href="/Usuarios"><img class="menu_icon" src="~/img/logout.png">Usuarios</a>
                <a class="menu_bt " href="/Config"><img class="menu_icon" src="~/img/logout.png">Configuración</a>
                <a class="menu_bt logout " href="/"><img class="menu_icon" src="~/img/logout.png"> Cerrar Sesión</a>
            </div>
        </nav>
        <div class="container mx-auto px-0 mt-5" >
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
                
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
    <script src="https://kit.fontawesome.com/eb80a36c7c.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
