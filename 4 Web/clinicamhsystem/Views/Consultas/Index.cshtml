<h1>Consultas</h1>
<div class="card w-100 shadow-lg mt-5">
    <p>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
            Agregar Consulta
        </button>
    </p>
    <div class="card-body">
        <div class=" table-responsive ">
            <table id="table" class="table table-striped ">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Fecha</th>
                        <th>Peso</th>
                        <th>Motivo de consulta</th>
                        <th class="">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Consulta)
                    {
                        <tr>
                            <td>@item.PacienteInformacion.Nombre</td>
                            <td>@item.PacienteInformacion.Apellido</td>
                            <td>@item.Fecha.ToString("d")</td>
                            <td>@item.Peso</td>
                            <td>@item.MotivoConsulta</td>
                            <td>
                                <div class="options d-flex ">
                                    <a class="option" href="@Url.Action("Index","ContinuarConsulta",new{consultaId=item.IdConsulta})">Continuar</a>
                                    <form asp-action="Eliminar" asp-route-id="@item.IdConsulta">
                                        <button class="option" type="submit">Eliminar</button>
                                    </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Crear Consulta-->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Crear Consulta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="crear" asp-action="Create" method="POST">
                    <div class="row">
                        @* <div class="col-md-6">*@
                        <div class="form-group">
                            <label class="control-label">Paciente</label>
                            <select name="Paciente" class="form-control">
                                @foreach (var paciente in Model.Paciente)
                                {
                                    <option value="@paciente.IdPaciente">@paciente.Nombre @paciente.Apellido - @paciente.Dpi</option>
                                    <input hidden id="IdPaciente" name="IdPaciente" value="@paciente.IdPaciente"/>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Peso del paciente</label>
                            <input name="Peso" id="Peso" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Presion Arterial</label>
                            <input name="PresionArterial" id="PresionArterial" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Temperatura</label>
                            <input name="Temperatura" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Motivo de Consulta</label>
                            <input name="MotivoConsulta" id="PresionArterial" class="form-control" />
                        </div>
                        @*</div>*@
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" form="crear">Agregar</button>
            </div>

        </div>
    </div>
</div>


