@model IEnumerable<ClinicaDomain.Consulta>

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<div class="row">
    <form asp-action="Search" method="get">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Buscar Consulta" id="input" name="input">
            <div class="input-group-append">
                <input type="submit" class="btn btn-secondary" type="button" id="botonBusqueda" value="Buscar" />
            </div>
        </div>
    </form>
</div>
<p>
    <a asp-action="Create" method="get">Crear Consulta</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Motivo Consulta</th>
            <th>Paciente</th>
            <th>Diagnostico</th>
            <th>Pagada</th>
            <th>Total</th>
            <th>Terminada</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.MotivoConsulta)</td>
                <td>@Html.DisplayFor(modelItem => item.IdPaciente)</td>
                <td>@Html.DisplayFor(modelItem => item.Diagnostico)</td>
                <td>@Html.DisplayFor(modelItem => item.Pagada)</td>
                <td>@Html.DisplayFor(modelItem => item.Total)</td>
                <td>@Html.DisplayFor(modelItem => item.Terminada)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
