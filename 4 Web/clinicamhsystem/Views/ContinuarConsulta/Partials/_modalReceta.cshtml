@model ConsultaContinuarViewModel
<!-- Modal Crear Paciente-->
@{
    //var receta = Model.Consulta.Receta.FirstOrDefault();
    var newConsultaId = Model.Consulta.IdConsulta;
    // var receta = Model.Consulta.Receta.
   // receta ??= new();
