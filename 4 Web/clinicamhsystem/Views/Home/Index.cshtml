@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Inicio - Traumha</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="container vh-100 d-flex justify-content-center align-items-center">
        <div class="mb-md-1 mt-md-1">
            <div class="mx-auto my-auto">
                <form action="" class="form text-center">
                    <div class="logo">
                        <img src="~/img/Logo.png" alt="Logo" style="width:80%" class="mb-3">
                    </div>
                    <input type="text" id="user" class="mb-3" placeholder="Usuario" />
                    <input type="password" id="password" class="mb-3" placeholder="Contraseña" />
                    <a class="forgot mb-4" href="#">¿Olvidó su contraseña?</a>
                    <button type="submit">Entrar</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

