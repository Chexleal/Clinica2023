@model ErrorViewModel
@{
    Layout = null;
    ViewData["Title"] = "Algo salió mal";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewData["Title"] - Clínica de Traumatología</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fa;
        }

        .error-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .error-card {
            max-width: 540px;
            border-radius: 14px;
        }

        .error-icon {
            font-size: 3.5rem;
        }

        .clinic-name {
            font-size: 0.9rem;
            color: #6c757d;
        }

        .small-joke {
            font-size: 0.85rem;
            color: #6c757d;
        }
    </style>
</head>
<body>

    <div class="error-container">
        <div class="card shadow-sm error-card">
            <div class="card-body p-4 text-center">

                <div class="error-icon mb-3 text-warning">
                    🦴
                </div>

                <h4 class="mb-2">Uy… parece que algo se nos torció</h4>

                <p class="text-muted mb-2">
                    No fue un hueso, pero sí una parte del sistema.
                </p>

                <p class="text-muted">
                    El equipo ya está trabajando para “acomodarlo” de nuevo.
                </p>

                <p class="small-joke mt-3">
                    Tranquilo/a, aquí solo tratamos lesiones reales —
                    los errores digitales también se recuperan 😉
                </p>

                <div class="d-grid gap-2 mt-4">
                    <a href="/" class="btn btn-primary">
                        Volver al inicio
                    </a>

                    <button class="btn btn-outline-secondary" onclick="history.back()">
                        Regresar
                    </button>
                </div>

                <hr class="my-4" />

                <div class="clinic-name">
                    Sistema Clínico de Traumatología<br />
                    Cuidando cada detalle (incluso los digitales)
                </div>

            </div>
        </div>
    </div>

</body>
</html>
