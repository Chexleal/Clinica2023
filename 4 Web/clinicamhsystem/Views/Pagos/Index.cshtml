@model IEnumerable<ClinicaDomain.Consulta>


@{
    ViewData["Title"] = "Pagos";
}
@section Links{
    <link rel="stylesheet" href="~/css/pages/Consultas.css" asp-append-version="true" />
}

<div class="card card-body ">
    <table id="tableUser" class="table">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Peso</th>
                <th>Radiografias</th>
                <th>Presion Arterial</th>
                <th>Temperatura</th>
                <th>Motivo de consulta</th>
                <th>Total</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Fecha</td>
                    <td>@item.Peso</td>
                    <td>@item.Radiografias</td>
                    <td>@item.PresionArterial</td>
                    <td>@item.Temperatura</td>
                    <td>@item.MotivoConsulta</td>
                    <td>@item.Total</td>
                    <td>
                        <div class="options d-flex ">
                            <a class="option" href="@Url.Action("Index","Pagar",new{consultaId=item.IdConsulta})">Pagar</a>
                            <a class="option" href="@Url.Action("Editar","Consultas",new{id = @item.IdConsulta}) ">Editar</a>
                            <form asp-action="Eliminar" asp-route-id="@item.IdConsulta">
                                <button class="option" type="submit">Eliminar</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

@section Scripts{
    <script src="~/js/pages/consultas.js" asp-append-version="true"></script>
}