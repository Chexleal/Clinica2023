<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Traumha</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/clinicamhsystem.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-menu container-fluid vh-100 d-flex">
        <nav class="menu align-content-center justify-content-center">
            <div class="logo align-content-center justify-content-center d-flex mx-auto my-auto mt-4 ">
                    <img src="~/img/Logo.png" alt="Logo" style="width:80%" class="">
            </div>
            <hr class="mt-4">
            <b>Bienvenido Edgar Hernandez</b>
            <hr>
            <div class="botones btn-group-vertical  mt-2">
                <a class="menu_bt" href="/Pacientes/Pacientes"><img class="menu_icon" src="~/img/paciente.png"> Pacientes</a>
                <a class="menu_bt" href="#"><img class="menu_icon" src="~/img/logout.png">Consultas</a>
                <a class="menu_bt" href="#"><img class="menu_icon" src="~/img/logout.png">pagar Consultas</a>
                <a class="menu_bt " href="#"><img class="menu_icon" src="~/img/logout.png">Citas</a>
                <a class="menu_bt " href="#"><img class="menu_icon" src="~/img/logout.png">Reportes</a>
                <a class="menu_bt " href="#"><img class="menu_icon" src="~/img/logout.png">Servicios</a>
                <a class="menu_bt " href="#"><img class="menu_icon" src="~/img/logout.png">Usuarios</a>
                <a class="menu_bt " href="#"><img class="menu_icon" src="~/img/logout.png">Configuración</a>
                <a class="menu_bt logout " href="/"><img class="menu_icon" src="~/img/logout.png"> Cerrar Sesión</a>
            </div>
        </nav>
        <div class="content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
                
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
