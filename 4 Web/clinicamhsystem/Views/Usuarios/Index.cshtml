@model IEnumerable<ClinicaDomain.Usuario>


@{
    ViewData["Title"] = "Usuarios";
}

<h1>Usuarios</h1>

<div class="row">
    <form asp-action="Search" method="get">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Buscar usuario" id="input" name="input">
            <div class="input-group-append">
                <input type="submit" class="btn btn-secondary" type="button" id="botonBusqueda" value="Buscar" />
            </div>
        </div>
    </form>
    <div>
        <document>
            $('#buscar').on('keyup', function () {
            tabla.search(this.value).draw();
            });
        </document>
    </div>
</div>
<p>
    <a asp-action="Create" method="get">Crear usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>No.</th>
            <th>Usuario</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Teléfono</th>
            <th>Correo</th>
            <th>Dpi</th>
            <th>Profesión</th>
            <th>Remitido por</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.NoRegistro</td>
            <td>@item.NombreUsuario</td>
            <td>@item.Nombre</td>
            <td>@item.Apellido</td>
            <td>@item.Telefono</td>
            <td>@item.Correo</td>
            <td>@item.Dpi</td>
            <td>@item.Profesion</td>
            <td>@item.Remitido</td>
            <td>
                    <div class="options">
                        <a class="option" href="/Usuarios/Detalles/@item.IdUsuario">Ver</a>
                        <a class="option" href="/Usuarios/Editar/@item.IdUsuario">Editar</a>
                        <form asp-action="Eliminar" asp-route-id="@item.IdUsuario">
                            <button class="option" type="submit">Eliminar</button>
                        </form>
                        @if (item.UsuarioActivo == true)
                        {
                            <form asp-action="Desactivar" asp-route-id="@item.IdUsuario">
                                <button class="option" type="submit">Desactivar</button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Activar" asp-route-id="@item.IdUsuario">
                                <button class="option" type="submit">Activar</button>
                            </form>
                        }
                    </div>
            </td>
                <td>
                    <button class="btn" type="button" id="rowMenu" data-bs-toggle="dropdown" aria-expanded="false">
                        ...
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="/Usuarios/Detalles/@item.IdUsuario">Ver</a>
                        <a class="dropdown-item" href="/Usuarios/Editar/@item.IdUsuario">Editar</a>
                        <form asp-action="Eliminar" asp-route-id="@item.IdUsuario">
                            <button class="dropdown-item" type="submit">Eliminar</button>
                        </form>
                        <form asp-action="Desactivar" asp-route-id="@item.IdUsuario">
                            <button class="dropdown-item" type="submit">Desactivar</button>
                        </form>

                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
