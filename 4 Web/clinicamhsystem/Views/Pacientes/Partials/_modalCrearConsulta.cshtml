<!-- Modal Crear Consulta-->
<div class="modal fade" id="createConsultaModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Crear Nueva Consulta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="crearConsulta" method="POST" action="@Url.Action("Create","Consultas")">
                    <input hidden id="IdPaciente" name="IdPaciente" />
                    <div class="form-group">
                        <label for="Peso" class="control-label">Peso</label>
                        <input name="Peso" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="PresionArterial" class="control-label">Presion Arterial</label>
                        <input name="PresionArterial" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="Temperatura" class="control-label">Temperatura</label>
                        <input name="Temperatura" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="MotivoConsulta" class="control-label">Motivo Consulta</label>
                        <textarea name="MotivoConsulta" class="form-control"></textarea>
                    </div>
                </form>
            </div>
     
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-primary" form="crearConsulta">Agregar</button>
            </div>

        </div>
    </div>
</div>
