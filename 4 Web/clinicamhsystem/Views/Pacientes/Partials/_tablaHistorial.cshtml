@using ClinicaDomain
@using ClinicaInfrastructure


<div class=" table-responsive">
    <table id="table" class="table table-striped ">
        <thead class="table-dark">
            <tr>
                <th>Fecha</th>
                <th>Motivo de consulta</th>
                <th>Diagnostico</th>
                <th>Observaciones</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var consulta in Model)
            {
                <tr>
                    <td>@consulta.Fecha.ToString("dd/MM/yyyy")</td>
                    <td data-bs-toggle="popover" data-bs-placement="top" data-bs-trigger="hover focus" data-bs-content="@consulta.MotivoConsulta">@StringManager.CutOnMax(consulta.MotivoConsulta, 40)</td>
                    <td data-bs-toggle="popover" data-bs-placement="top" data-bs-trigger="hover focus" data-bs-content="@consulta.Diagnostico">@StringManager.CutOnMax(consulta.Diagnostico, 40)</td>
                    <td data-bs-toggle="popover" data-bs-placement="top" data-bs-trigger="hover focus" data-bs-content="@consulta.Observaciones">@StringManager.CutOnMax(consulta.Observaciones, 40)</td>
                    <td>
                        <button class="btn btn-outline-info" onclick="ShowHistorialModal('@consulta.IdConsulta')">Ver Historial</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
