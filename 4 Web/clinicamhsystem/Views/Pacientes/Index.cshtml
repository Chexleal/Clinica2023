@using Newtonsoft.Json;
@model IEnumerable<ClinicaDomain.Paciente>

@{
    ViewData["Title"] = "Pacientes";
}
@section Links{
    <link rel="stylesheet" href="~/css/pages/Usuarios.css" asp-append-version="true" />
}

<h1>Pacientes</h1>

<div class="card card-body ">
    <p>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
            Agregar Paciente
        </button>
    </p>
    <table id="tablePaciente" class="table">
        <thead>
            <tr>
                <th></th>
                <th>NoRegistro</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Dpi</th>
                <th>Edad</th>
                <th>Telefono</th>
                <th>Correo</th>
                <th>Direccion</th>
                <th>Tipo de Sange </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><a class="option" href="@Url.Action("Consulta","Pacientes",new{id = @item.IdPaciente}) ">Generar consulta</a></td>
                    <td>@item.NoRegistro</td>
                    <td>@item.Nombre</td>
                    <td>@item.Apellido</td>
                    <td>@item.Dpi</td>
                    <td>@(DateTime.Now.Year-item.FechaNacimiento.Year)</td>
                    <td>@item.Telefono</td>
                    <td>@item.Correo</td>
                    <td>@item.Direccion</td>
                    <td>@item.TipoSange</td>
                    <td>s
                        <div class="options d-flex ">
                            <a class="option" href="@Url.Action("Historial","Pacientes",new{id = @item.IdPaciente}) ">Historial</a>
                            <a class="option" href="/Pacientes/Detalles/@item.IdPaciente">Ver</a>
                            @*<button class="option modal-editar" data-bs-toggle="modal" data-bs-target="#editModal" data-paciente="@JsonConvert.SerializeObject(item)">Editar</button>*@
                            <a class="option" href="@Url.Action("Editar","Pacientes",new{id = @item.IdPaciente}) ">Editar</a>
                            <form asp-action="Eliminar" asp-route-id="@item.IdPaciente">
                                <button class="option" type="submit">Eliminar</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal Crear Paciente-->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Crear Paciente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="crear" asp-action="Create" method="POST">
                    <div class="form-group">
                        <label class="control-label">Nombre</label>
                        <input name="Nombre" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Apellido</label>
                        <input name="Apellido" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Dpi</label>
                        <input name="Dpi" id="Dpi" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Fecha de nacimiento</label>
                        <input name="FechaNacimiento" type="date" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Genero</label>
                        <input name="Genero" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Teléfono</label>
                        <input name="Telefono" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Correo</label>
                        <input name="Correo" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Direccion</label>
                        <input name="Direccion" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Alergias</label>
                        <input name="Alergias" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Estado civil</label>
                        <input name="EstadoCivil" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Profesion</label>
                        <input name="Profesion" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Nacionalidad</label>
                        <input name="Nacionalidad" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Remitido por</label>
                        <input name="Remitido" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Antecedentes</label>
                        <input name="Antecedentes" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Tipo de sangre</label>
                        <input name="TipoSange" class="form-control" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" form="crear">Agregar</button>
            </div>

        </div>
    </div>
</div>

<!-- Modal Editar Paciente-->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Editar Paciente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @*await Html.PartialAsync("_Editar")*@
                <form id="editar" asp-action="Editar" method="POST">
                    <div class="form-group">
                        <label class="control-label">Nombre</label>
                        <input name="Nombre" id="Nombre" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Apellido</label>
                        <input name="Apellido" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Dpi</label>
                        <input name="Dpi" id="Dpi" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Fecha de nacimiento</label>
                        <input name="FechaNacimiento" type="date" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Genero</label>
                        <input name="Genero" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Teléfono</label>
                        <input name="Telefono" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Correo</label>
                        <input name="Correo" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Direccion</label>
                        <input name="Direccion" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Alergias</label>
                        <input name="Alergias" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Estado civil</label>
                        <input name="EstadoCivil" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Profesion</label>
                        <input name="Profesion" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Nacionalidad</label>
                        <input name="Nacionalidad" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Remitido por</label>
                        <input name="Remitido" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Antecedentes</label>
                        <input name="Antecedentes" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Tipo de sangre</label>
                        <input name="TipoSange" class="form-control" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-primary" form="editar">Guardar</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $(".modal-editar").click(function () {
            var paciente = JSON.parse($(this).data("paciente"));
            
            $('#editModal #Nombre').val(paciente.Nombre);
            $('#editModal #Apellido').text(paciente.Nombre);
            $('#editModal #Dpi').text(paciente.Nombre);
            $('#editModal #FechaNacimiento').text(paciente.Nombre);
            $('#editModal #Genero').text(paciente.Nombre);
            $('#editModal #Telefono').text(paciente.Nombre);
            $('#editModal #Correo').text(paciente.Nombre);
            $('#editModal #Direccion').text(paciente.Nombre);
            $('#editModal #Alergias').text(paciente.Nombre);
            $('#editModal #EstadoCivil').text(paciente.Nombre);
            $('#editModal #Profesion').text(paciente.Nombre);
            $('#editModal #Nacionalidad').text(paciente.Nombre);
            $('#editModal #Remitido').text(paciente.Nombre);
            $('#editModal #Antecedentes').text(paciente.Nombre);
            $('#editModal #TipoSangre').text(paciente.Nombre);

            // Abrir el modal
            $("#editModal").modal("show");
        });
    });
</script>

@section Scripts{
    <script src="~/js/pages/pacientes.js" asp-append-version="true"></script>
}