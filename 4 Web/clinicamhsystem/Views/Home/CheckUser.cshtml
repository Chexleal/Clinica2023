@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/pages/recoverAccount.css" asp-append-version="true" />
</head>
<body>
    <div class="container vh-100 d-flex justify-content-center align-items-center"> 
        <div class="mb-md-1 mt-md-1">
            <div class="mx-auto my-auto">
                <form action="@Url.Action("UsuarioExistente")" class="form text-center">
                    <h1>Introduce tu usuario</h1>
                    <input type="text" id="userName" class="mb-3" placeholder="Usuario" name="userName" />
                    <button type="submit">Aceptar</button>
                </form>
            </div>
        </div>
    </div>

    <div id="sweetAlertContainer"></div>
    <div id="errorMessage" style="display:none;">@TempData["Error"]</div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="~/js/pages/login.js"></script>
</body>
</html>