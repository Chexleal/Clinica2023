@model DetallesPagarViewModel

<table class="table table-borderless table-sm">
    <thead>
        <tr>
            <th>Descripción</th>
            <th>Producto</th>
            <th>Valor</th>
            <th>Cantidad</th>
            <th>Subtotal</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var opcion in Model.Detalles.Where(x => x.IdConsulta == Model.consulta.IdConsulta))
        {
            <tr>
                <td>@Model.Servicios.FirstOrDefault(p => p.IdMotivoCobro == opcion.IdMotivoCobro).Descripcion</td>
                <td>@opcion.Producto</td>
                <td>@opcion.Valor</td>
                <td>@opcion.Cantidad</td>
                <td>@opcion.Subtotal</td>
                <td>
                    <form asp-action="Eliminar" asp-route-id="@opcion.IdDetalleCobro">
                        <button class="option" type="submit">Eliminar</button>
                        <input hidden id="idConsulta" name="idConsulta" value="@opcion.IdConsulta" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>