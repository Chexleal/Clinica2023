@model string

@{
    Layout = null;
    var username = ViewData["username"];
    var usModel = Model;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/pages/recoverAccountEmail.css" asp-append-version="true" />
</head>
<body>
    <div class="container vh-100 d-flex justify-content-center align-items-center">
        <div class="mb-md-1 mt-md-1">
            <h4 id="tittle" class="text-center">Nueva contraseña @usModel @username</h4>
            <div class="mx-auto my-auto"> 
                <form action="@Url.Action("CrearNuevaClave")" class="form text-center">
                    <h1>Ingresa la nueva contraseña</h1>
                    <input type="text" id="newPassword" class="mb-3" name="newPassword" /> 
                    <h1>Confirma la nueva contraseña</h1> 
                    <input type="text" id="newPasswordConfirmed" class="mb-3" name="newPasswordConfirmed" /> 
                    <button type="submit">Aceptar</button> 
                </form> 
            </div> 
        </div> 
    </div>
</body>
</html>